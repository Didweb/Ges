{% extends '::backend.html.twig' %}

{% block contenidos %}
<nav id="secundario">
 <a href="{{ path('gestor_categoria') }}">
           Tornar al llistat de categories
        </a>
        
        <a href="{{ path('gestor_categoria_new') }}" title="Crear nova categoria">
                Crear nova categoria
            </a>
</nav>
    
<section id="editar_registro">
	<h1>Editar Categoria</h1>
	
{% for flashMessage2 in app.session.flashbag.get('categoria_ok') %}
    <div class="flash_ok">
        {{ flashMessage2 | raw }}
    </div>
{% endfor %}

{% for flashMessage2 in app.session.flashbag.get('categoria_error') %}
    <div class="flash_error">
        {{ flashMessage2 | raw }}
    </div>
{% endfor %}
	
	
	 <form action="{{ path('gestor_categoria_update',{ 'id':entity.id}) }}" 
				method="post" {{ form_enctype(edit_form) }}>
				<input type="hidden" name="_method" value="PUT" />
	{{ form_errors(edit_form) }}
			{{ form_label(edit_form.nombre,"Nom:") }}
			{{ form_errors(edit_form.nombre) }}
			{{ form_widget(edit_form.nombre) }}
			
			{{ form_label(edit_form.descripcion,"Descripció:") }}
			{{ form_errors(edit_form.descripcion) }}
			{{ form_widget(edit_form.descripcion) }}
			
   <nav id="boton_accion">
		{{ form_rest(edit_form) }}
		</nav>
		</form>
</section>

<aside id="eliminar">
{% if borrar_perm>0 %}
<div class="mensa_borra">
Aquesta categoria no es pot eliminar.<br />
 A causa de que alguna feina  depèn d'aquesta categoria.
</div>
{% else %}
{{ form(delete_form) }}
{% endif%}
</aside>
{% endblock %}
