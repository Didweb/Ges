{% extends '::backend.html.twig' %}

{% block contenidos %}
<nav id="secundario">
 <a href="{{ path('gestor_fabricante') }}">
            Tornar al llistat de fabricants
        </a>
        
            <a href="{{ path('gestor_fabricante_new') }}" title="Crear nou fabricant">
                Crear nou fabricant
            </a>
</nav>

<section id="editar_registro">
    <h1>Editar fabricant</h1>


{% for flashMessage2 in app.session.flashbag.get('fabricante_ok') %}
    <div class="flash_ok">
        {{ flashMessage2 | raw }}
    </div>
{% endfor %}

{% for flashMessage2 in app.session.flashbag.get('fabricante_error') %}
    <div class="flash_error">
        {{ flashMessage2 | raw }}
    </div>
{% endfor %}


	 <form action="{{ path('gestor_fabricante_update',{ 'id':entity.id}) }}" 
				method="post" {{ form_enctype(edit_form) }}>
				<input type="hidden" name="_method" value="PUT" />
	{{ form_errors(edit_form) }}
			{{ form_label(edit_form.nombre,"Nom:") }}
			{{ form_errors(edit_form.nombre) }}
			{{ form_widget(edit_form.nombre) }}
			
			{{ form_label(edit_form.url,"Web (posar http://):") }}
			{{ form_errors(edit_form.url) }}
			{{ form_widget(edit_form.url) }}


       <nav id="boton_accion">
		{{ form_rest(edit_form) }}
		</nav>
		</form>

</section>

<aside id="eliminar">
	{% if borrar_perm>0 %}
		<div class="mensa_borra">
		Aquest fabricant no es pot eliminar.<br />
		 Degut a que alguna feina  dep√®n d'aquesta fabricant.
		</div>
	{% else %}
		{{ form(delete_form) }}
	{% endif%}
</aside>
{% endblock %}
