{% extends '::Backend.html.twig' %}
{% block contenidos %}
<section id="col_una">

<div id="edita_iz">
<h1>Crear {{ entidad }}</h1>

	{% for MSNflash in app.session.flashbag.get('editar_ok') %}
		<div class="flash_ok">
			{{ MSNflash | raw }}
		</div>
	{% endfor %}



<form action="{{ path('gestor_editar_crear', {'entidad':entidad} ) }}" method="post" {{ form_enctype(edit_form) }}>
				
	<input type="hidden" name="_method" value="PUT" />
	{{ form_errors(edit_form) }}
	{{ form_widget(edit_form) }}
		
		<div>
			<button type="submit" title="Editar" >Editar</button>
		</div>	
		
	 {{ form_rest(edit_form) }}
 </form> 
</div>

</section>
{% endblock %}
