{% extends '::Backend.html.twig' %}
{% block contenidos %}
<section id="col_una">
<h1>Listado de {{ nomentidad }}</h1>

{% set col = mimebros|length %}<br />
<table style="border:1px solid #333333;"> 
        <thead>
           <tr  style="border:1px solid #ff0000;>
             
                {% for noms in nomcampos  %}
                 
                {% if noms !=nomentidad %}
				<th style="border:1px solid #333333;">{{ noms }}</th>
               {% endif %}
               {% endfor %}
    
            </tr>
            
        </thead>
      

<tbody>
        {% for valor in entity %}
            <tr>
				<td>
				{% if valor.formato=='nada' %}
					{{ valor.campo }}
				{% elseif valor.formato=='fecha' %}
					{{ valor.campo|date('d-m-Y') }}
				{% elseif valor.formato=='corta'  %}
					{{ valor.campo[:valor.valor] }}
				{% endif %}	
				</td>
            </tr> 
        {% endfor %}
</tbody>
 </table> 

<hr />


</section>
{% endblock %}
