{% extends '::backend.html.twig' %}

{% block contenidos %}
<nav id="secundario">
            <a href="{{ path('gestor_fabricante_new') }}" title="Crear nou fabricant">
                Crear nou fabricant
            </a>
</nav>


<section id="listado">

    <h1>Llistat de fabricants</h1>
<div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div>
    <table class="records_list">
        <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'Ordre', 'f.nombre') }} Nombre</th>
                <th>Url</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% set n=1 %}
        {% for entity in pagination %}
         	{% if n is divisibleby(2)  %}
				{% set linea="impar" %} 
            {% else %}
				{% set linea="par" %}
            {% endif %}
            <tr class="{{ linea }}">
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.url }}</td>
                <td>
                
                  <a href="{{ path('gestor_fabricante_edit', { 'id': entity.id }) }}" title="Editar" class="bo_editar"></a>
                   
                </td>
            </tr>
            {% set n=n+1 %}
        {% endfor %}
        </tbody>
    </table>

<div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div>
    {% endblock %}
