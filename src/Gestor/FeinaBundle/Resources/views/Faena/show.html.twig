        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('gestor_faena') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('gestor_faena_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
